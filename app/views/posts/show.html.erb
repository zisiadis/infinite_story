<div id='prompt'>
<div id='blurry-text'>
<%= Post.find(Post.count).line %>
	</div>
	
		<%= Post.last.line %>...
		</div> 

<div id='mainpage'>
<h1>Add to the story!</h1>
<%= Post.count %> entries so far!


<%= form_for(@post) do |f| %>
		

			<%= f.label 'Go ahead:' %>
			<%= f.text_field :line %>

			<%= fields_for @user do |fa| %>
      			<%=fa.label 'email' %>
      			<%=fa.text_field :email %>
  			<% end %>

	

			<%= f.submit "Submit!", class: 'btn btn-large btn-primary' %>

			<% end %>
			</div>
